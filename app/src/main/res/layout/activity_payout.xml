<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MenuActivity" android:id="@+id/layo">
    <TextView
            android:id="@+id/gerecht_prijs3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"/>
    <TextView
            android:id="@+id/gerecht_naam3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/constraintLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                tools:visibility="visible" android:visibility="visible"><![CDATA[
            ... />






            ]]>
            <Button
                    android:text="Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnTerug"
                    android:backgroundTint="#FF5722" android:textColor="#263238"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.95"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.976"/>
            <Button
                    android:text="Cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnContant"
                    android:backgroundTint="#F44336" android:textColor="#263238"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.239"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.875"/>
            <Button
                    android:text="@string/pin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/btnPin"
                    android:backgroundTint="#F44336" android:textColor="#263238"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.796"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.875"/>
            <TextView
                    android:text="Payment methods:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvBetaalmethode"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.792"/>
            <TextView
                    android:text="Receipt:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/tvKassabon"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="132dp" android:layout_marginBottom="500dp"
                    app:layout_constraintBottom_toTopOf="@+id/tvBetaalmethode" android:textSize="24sp"
                    android:layout_marginEnd="135dp" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="343dp"
                    android:layout_height="401dp"
                    tools:visibility="visible" android:visibility="visible"
                    android:id="@+id/recycler_view" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="@+id/tvBetaalmethode"
                    app:layout_constraintTop_toBottomOf="@+id/tvKassabon" app:layout_constraintHorizontal_bias="0.632"
                    app:layout_constraintVertical_bias="0.31"/>
            <TextView
                    android:id="@+id/text_view_totaalprijs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Amount"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    app:layout_constraintEnd_toEndOf="@+id/recycler_view"
                    android:layout_marginEnd="132dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvBetaalmethode"
                    android:layout_marginBottom="28dp" app:layout_constraintTop_toBottomOf="@+id/recycler_view"
                    app:layout_constraintVertical_bias="0.0" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintHorizontal_bias="0.583"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
