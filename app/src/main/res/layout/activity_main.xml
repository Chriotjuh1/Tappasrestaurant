<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/constraintLayout2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" tools:layout_editor_absoluteY="28dp"
                tools:layout_editor_absoluteX="0dp">
            <com.google.android.material.tabs.TabLayout
                    android:layout_width="0dp"
                    android:layout_height="46dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.925"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:background="#00BCD4" app:layout_constraintHorizontal_bias="0.0" android:id="@+id/tabLayout">

                <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Gerechten"/>

                <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/Dranken"/>

            </com.google.android.material.tabs.TabLayout>
            <Button
                    android:text="@string/volgende"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/btnVolgende"
                    app:layout_constraintTop_toBottomOf="@+id/tabLayout" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="298dp"
                    app:layout_constraintHorizontal_bias="1.0" app:layout_constraintVertical_bias="0.6"
                    android:layout_marginEnd="16dp"/>
            <ProgressBar
                    style="@style/Widget.AppCompat.ProgressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/timeBar" tools:layout_editor_absoluteY="886dp"
                    tools:layout_editor_absoluteX="11dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>